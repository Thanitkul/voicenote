// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id() @default(uuid())
  name       String
  email      String   @unique()
  password   String
  dob        DateTime
  Courses    Course[] @relation(name: "owner")
  EnrolledIn Course[] @relation(name: "students")
}

model Course {
  id         String      @id() @default(uuid())
  courseName String
  User       User?       @relation(name: "owner", fields: [userId], references: [id])
  userId     String?
  Recording  Recording[]
  Students   User[]      @relation(name: "students")
}

model Recording {
  id         String   @id() @default(uuid())
  course     Course   @relation(fields: [courseId], references: [id])
  courseId   String
  data       String
  recordedAt DateTime @default(now())
}
